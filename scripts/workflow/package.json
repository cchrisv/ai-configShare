{
  "name": "@ai-config/scripts",
  "version": "2.0.0",
  "description": "TypeScript-based AI workflow tools for Azure DevOps and Salesforce",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "ado-tools": "./dist/cli/ado-tools.js",
    "sf-tools": "./dist/cli/sf-tools.js",
    "wiki-tools": "./dist/cli/wiki-tools.js",
    "workflow-tools": "./dist/cli/workflow-tools.js",
    "report-tools": "./dist/cli/report-tools.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src cli --ext .ts",
    "lint:fix": "eslint src cli --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "azure-devops-node-api": "^15.1.2",
    "jsforce": "^3.8.1",
    "@salesforce/core": "^8.23.0",
    "commander": "^12.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "vitest": "^2.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "rimraf": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "azure-devops",
    "salesforce",
    "workflow",
    "automation",
    "cli"
  ]
}
